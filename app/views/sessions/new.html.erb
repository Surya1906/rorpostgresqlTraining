<div style="padding: 35px; display: flex; justify-content: center;">
    <div style="width: 100%; max-width: 400px;">
      <h1 style="text-align: center;">Sign In</h1>
      <%= form_with url: sign_in_path do |f| %>
        <p>
          <label for="email" style="display: block;">Email:</label>
          <%= f.text_field :email, id: 'email', style: 'width: 100%; padding: 5px;' %>
        </p>
        <p>
          <label for="password" style="display: block;">Password:</label>
          <%= f.password_field :password, id: 'password', style: 'width: 100%; padding: 5px;' %>
        </p>
        <p>
          <%= f.submit 'Log In', style: 'width: 100%; padding: 10px; background-color: #4CAF50; color: white; border: none; cursor: pointer;' %>
        </p>
      <% end %>
      <p style="text-align: center;">
        Create new Account? Click <%= link_to 'Sign Up', sign_up_path %>
      </p>
    </div>
  </div>
