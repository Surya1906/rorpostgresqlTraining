<div style="padding: 35px;width: 100%;">
    <h1>Show Article</h1>
    <p style="font-size: 15px;"><strong>Title: </strong> <%= @article.title %> </>
    <p style="font-size: 15px;"><strong>Description: </strong> <%= @article.description %> </p>

    <div style="display: flex;flex-direction:row;gap: 20px">
        <%= button_to "Back to article", articles_path, method: :get%>
        <%= button_to 'Edit', edit_article_path(@article), method: :get %>
        <%= button_to 'Delete', article_path(@article), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </div>
</div>

