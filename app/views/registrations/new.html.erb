<div style="padding: 35px; display: flex; justify-content: center;">
  <div style="width: 100%; max-width: 400px;">
    <h1 style="text-align: center;">Sign Up</h1>
    <%= form_with model: @user, url: sign_up_path do |f| %>
      <p>
        <label for="email" style="display: block;">Email:</label>
        <%= f.text_field :email, style: 'width: 100%; padding: 5px;' %>
      </p>
      <p>
        <label for="password" style="display: block;">Password:</label>
        <%= f.password_field :password, style: 'width: 100%; padding: 5px;' %>
      </p>
      <p>
        <label for="password_confirmation" style="display: block;">Confirm Password:</label>
        <%= f.password_field :password_confirmation, style: 'width: 100%; padding: 5px;' %>
      </p>
      <p>
        <%= f.submit 'Sign Up', style: 'width: 100%; padding: 10px; background-color: #4CAF50; color: white; border: none; cursor: pointer;' %>
      </p>
    <% end %>
    <p style="text-align: center;">
      Already have account then <%= link_to 'Login', sign_in_path %>
    </p>
  </div>
</div>
